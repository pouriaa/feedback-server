{
  "name": "@product-feedback/server",
  "version": "0.0.1",
  "private": true,
  "description": "Backend API server for Product Feedback SDK",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:worker": "tsc && node scripts/build-worker.js",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "prisma generate",
    "db:push": "DATABASE_URL=file:./dev.db prisma db push",
    "db:migrate": "DATABASE_URL=file:./dev.db prisma migrate dev",
    "db:studio": "DATABASE_URL=file:./dev.db prisma studio",
    "db:reset": "DATABASE_URL=file:./dev.db prisma migrate reset --force",
    "postinstall": "prisma generate",
    "deploy": "npm run build:worker && wrangler deploy",
    "deploy:staging": "npm run build:worker && wrangler deploy --env staging",
    "d1:create": "wrangler d1 create product-feedback-db",
    "d1:create:staging": "wrangler d1 create product-feedback-db-staging",
    "d1:migrate": "wrangler d1 migrations apply product-feedback-db --local",
    "d1:migrate:remote": "wrangler d1 migrations apply product-feedback-db --remote"
  },
  "dependencies": {
    "@prisma/adapter-d1": "^6.2.1",
    "@prisma/client": "^6.2.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "hono": "^4.6.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.24.0",
    "prisma": "^6.2.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "wrangler": "^3.99.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

